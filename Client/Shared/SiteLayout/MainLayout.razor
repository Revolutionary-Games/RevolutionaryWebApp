@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <MediaQueryList>
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <TopNavBar />

            @if (NavigationManager.RelativeUrl().StartsWith("admin"))
            {
                <AdminNavBar />
            }

            @if (NavigationManager.RelativeUrl().StartsWith("association"))
            {
                <AssociationNavBar />
            }

            @if (NavigationManager.RelativeUrl().StartsWith("tools"))
            {
                <ToolsNavBar />
            }

            <AnotherTabSigninDetector />
            <CSRFExpiryAlerter />
            <SiteNotifications />

            <article class="content px-4">
                @Body
            </article>
        </main>
    </MediaQueryList>
</div>
