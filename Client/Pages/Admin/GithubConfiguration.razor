@page "/admin/github"
@using RevolutionaryWebApp.Shared.Models.Enums
@inject NavigationManager NavManager

<AccessLimited RequiredAccess="GroupType.Admin" RedirectOnInsufficientPermission="@true">
    <h3>Github Configuration</h3>

    <h4>Webhooks</h4>

    <p>Github webhook URL is: <a href="@GithubWebhookURL">@GithubWebhookURL</a></p>

    <GithubWebhookControls />

    <h4 class="mt-3">Auto Pull Request Comments</h4>

    <GithubAutoCommentControls />

    <h4 class="mt-3">Repos For Release Stats</h4>

    <GithubRepoReleaseStatsControls />

    <hr/>

    <RepoReleaseStatsDisplayer />

    <DevCenterTitle>Github</DevCenterTitle>
</AccessLimited>

@code {

    private string GithubWebhookURL => new Uri(new Uri(NavManager.Uri), "/api/v1/webhook/github").ToString();
}
